.goods-card {
  box-sizing: border-box;
  font-size: 24rpx;
  border-radius: 0 0 16rpx 16rpx;
  border-bottom: none;
}

.goods-card__main {
  position: relative;
  display: flex;
  line-height: 1;
  padding: 0;
  background: transparent;
  width: 342rpx;
  border-radius: 0 0 16rpx 16rpx;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
  flex-direction: column;
}

.goods-card__thumb {
  flex-shrink: 0;
  position: relative;
  width: 340rpx;
  height: 340rpx;
}

.goods-card__thumb:empty {
  display: none;
  margin: 0;
}

.goods-card__img {
  display: block;
  width: 100%;
  height: 100%;
  border-radius: 16rpx 16rpx 0 0;
  overflow: hidden;
}

.goods-card__body {
  display: flex;
  flex: 1 1 auto;
  background: #fff;
  border-radius: 0 0 16rpx 16rpx;
  padding: 16rpx 24rpx 18rpx;
  flex-direction: column;
  width: 100%;
  box-sizing: border-box;
}

.goods-card__upper {
  display: flex;
  flex-direction: column;
  overflow: hidden;
  flex: 1 1 auto;
  width: 100%;
}

.goods-card__title {
  flex-shrink: 0;
  font-size: 28rpx;
  color: #333;
  font-weight: 400;
  display: -webkit-box;
  min-height: 60rpx;
  height: auto;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  word-break: break-word;
  line-height: 36rpx;
  width: 100%;
}

.goods-card__tags {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.goods-card__tag {
  color: #fa4126;
  background: transparent;
  font-size: 20rpx;
  border: 1rpx solid #fa4126;
  padding: 0 8rpx;
  border-radius: 16rpx;
  line-height: 30rpx;
  margin: 0 8rpx 8rpx 0;
  display: block;
  overflow: hidden;
  white-space: nowrap;
  word-break: keep-all;
  text-overflow: ellipsis;
}

.goods-card__down {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding: 0 12rpx;
}

.goods-card__origin-price {
  white-space: nowrap;
  font-weight: 700;
  order: 2;
  color: #bbbbbb;
  font-size: 24rpx;
  margin: 0 0 0 8rpx;
}

.goods-card__price {
  display: flex;
  align-items: baseline;
  color: #fa4126;
  font-size: 36rpx;
  line-height: 36rpx;
  margin: 0;
  font-weight: bold;
  flex: 1;
}

.goods-card__add-cart {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 16rpx;
  position: relative;
  white-space: nowrap;
}

.goods-card__add-cart .add-cart {
  display: none;
}

.spec-for-price {
  font-size: 32rpx !important;
  font-weight: 500;
}

.spec-for-symbol {
  font-size: 24rpx;
}

.goods-card__unit {
  color: #fa4126;
  font-size: 24rpx;
  margin-left: 2rpx;
  font-weight: normal;
}

.card-modal {
  background: #fff;
  width: 560rpx;
  border-radius: 20rpx;
  overflow: hidden;
}

.card-header {
  display: flex;
  align-items: center;
  padding: 40rpx;
  background: #f8f8f8;
  border-bottom: 2rpx solid #eee;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 24rpx;
  border: 4rpx solid #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.info {
  flex: 1;
}

.name {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 12rpx;
}

.title {
  font-size: 26rpx;
  color: #666;
}

.card-content {
  padding: 32rpx 40rpx;
}

.contact-item {
  display: flex;
  flex-direction: column;
  padding: 24rpx;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
  border: 2rpx solid #eee;
}

.contact-main {
  display: flex;
  width: 100%;
  margin-bottom: 16rpx;
}

.contact-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 24rpx;
}

.contact-info {
  flex: 1;
  min-width: 0;
}

.contact-name {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.contact-title {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.contact-phone {
  font-size: 26rpx;
  color: #333;
}

.contact-wechat {
  font-size: 26rpx;
  color: #333;
}

.text-ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.contact-actions-bottom {
  width: 100%;
  padding: 0;
  display: flex;
  justify-content: center;
}

.contact-actions-bottom .t-button {
  width: 240rpx !important;
  min-width: unset !important;
}

.card-footer {
  padding: 0 40rpx 40rpx 40rpx;
}

/* 确保弹窗内容居中 */
.t-popup {
  display: flex;
  align-items: center;
  justify-content: center;
}

.book-btn {
  padding: 10rpx 20rpx;
  background: linear-gradient(90deg, #ff6146 0%, #ff1f1f 100%);
  color: #ffffff;
  font-size: 24rpx;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(255, 97, 70, 0.2);
  white-space: nowrap;
  margin-left: auto;
  margin-right: 12rpx;
}

.book-btn:active {
  transform: scale(0.95);
  background: linear-gradient(90deg, #ff4f34 0%, #f01818 100%);
}

.contact-popup {
  position: relative;
  background: white;
  padding: 32rpx;
  border-radius: 16rpx;
  width: 600rpx;
  max-height: 80vh;
  display: flex;
  padding-top: 80rpx;
  flex-direction: column;
}

.contact-list {
  flex: 1;
  overflow-y: auto;
  max-height: calc(80vh - 120rpx);
  padding-right: 8rpx;
}

.contact-title {
  font-size: 32rpx;
  font-weight: bold;
  padding: 0 0 0 0;
  text-align: left;
  flex-shrink: 0;
}

.contact-item {
  display: flex;
  padding: 24rpx;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
  border: 2rpx solid #eee;
}

.contact-item.selected {
  border-color: #0052d9;
  background: rgba(0, 82, 217, 0.05);
}

.contact-avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 75rpx;
  margin-right: 24rpx;
}

.contact-info {
  flex: 1;
}

.contact-name {
  font-size: 28rpx;
  font-weight: bold;
}

.contact-phone {
  font-size: 24rpx;
  color: #333;
}

.contact-actions {
  margin-top: 32rpx;
  text-align: center;
}

/* 美化滚动条 */
.contact-list::-webkit-scrollbar {
  width: 6rpx;
}

.contact-list::-webkit-scrollbar-thumb {
  background: #ddd;
  border-radius: 3rpx;
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 0 24rpx 0;
  flex-shrink: 0;
}

.close-icon {
  position: absolute;
  right: 24rpx;
  top: 24rpx;
  padding: 12rpx;
  margin: -12rpx;
  cursor: pointer;
  z-index: 1;
}

/* 调整原有标题样式 */
.contact-title {
  font-size: 26rpx;
  font-weight: bold;
  text-align: left;
}
