<wxs module="utils">
	var REGEXP = getRegExp('^\d+(\.\d+)?$');
	function addUnit(value) {
	if (value == null) {
	return '';
	}
	return REGEXP.test('' + value) ? value + 'rpx' : value;
	}
	module.exports = {
	addUnit: addUnit
	};
</wxs>
