page {
  background: #ffffff;
  min-height: 100%;
}

.page-container {
  min-height: 100vh;
  background: #ffffff;
}

.custom-tabs {
  position: sticky;
  top: 0;
  z-index: 100;
  background: #ffffff;
}

.cooking-container {
  padding: 30rpx;
  background: #ffffff;
}

.recipe-item {
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
}

.recipe-header {
  display: flex;
  align-items: center;
  background: #ffffff;
}

.recipe-image {
  width: 240rpx;
  height: 180rpx;
  flex-shrink: 0;
  border-radius: 8rpx;
}

.recipe-info {
  flex: 1;
  padding: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: rgb(176, 199, 149);
  height: 180rpx;
  box-sizing: border-box;
}

.recipe-name {
  color: #ffffff;
  font-size: 30rpx;
  font-weight: 600;
}

.recipe-arrow {
  width: 16rpx;
  height: 16rpx;
  border-top: 3rpx solid #ffffff;
  border-right: 3rpx solid #ffffff;
  transform: rotate(45deg);
  transition: transform 0.3s ease;
}

.recipe-arrow.expanded {
  transform: rotate(135deg);
}

.recipe-content {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease;
  background: #ffffff;
  padding: 0 30rpx;
  width: 100%;
  box-sizing: border-box;
}

.recipe-content.expanded {
  max-height: 400rpx;
  padding: 30rpx;
}

.recipe-content text {
  color: #333;
  font-size: 28rpx;
  line-height: 1.6;
  white-space: pre-wrap;
  display: block;
}

/* 添加 TDesign Tabs 的自定义样式 */
.t-tabs {
  width: 100%;
}

.t-tabs__item {
  color: #666;
  font-size: 28rpx;
}

.t-tabs__item--active {
  color: #000;
  font-weight: bold;
}

.t-tabs__track {
  background-color: rgb(176, 199, 149) !important;
}
