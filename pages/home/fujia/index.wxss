.page-container {
  min-height: 100vh;
  padding-bottom: 50rpx;
  background: #ffffff;
}

.custom-tabs {
  position: sticky;
  top: 0;
  z-index: 100;
  background: #ffffff;
}

.product-container {
  padding: 30rpx;
}

.product-item {
  margin-bottom: 40rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  background: #ffffff;
}

.product-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
  padding: 24rpx;
  background: rgb(176, 199, 149);
  border-radius: 12rpx;
  margin-bottom: 24rpx;
  text-align: center;
}

.image-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-bottom: 24rpx;
  padding: 10rpx;
}

.image-item {
  position: relative;
  width: 100%;
  padding-bottom: 100%; /* 保持1:1的宽高比 */
}

.image-wrapper {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
  border-radius: 12rpx;
  overflow: hidden;
}

.product-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.image-item:active .product-image {
  transform: scale(1.05);
}

.product-description {
  font-size: 28rpx;
  line-height: 1.8;
  color: #666;
  padding: 24rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  margin-top: 24rpx;
}

/* TDesign Tabs 自定义样式 */
.t-tabs {
  width: 100%;
}

.t-tabs__item {
  color: #666;
  font-size: 28rpx;
}

.t-tabs__item--active {
  color: #000;
  font-weight: bold;
}

.t-tabs__track {
  background-color: rgb(176, 199, 149) !important;
}

.details-container {
  margin-top: 24rpx;
  border-radius: 12rpx;
  overflow: hidden;
  background: #ffffff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.details-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background: #f8f8f8;
}

.details-header text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.arrow {
  width: 16rpx;
  height: 16rpx;
  border-right: 3rpx solid #666;
  border-bottom: 3rpx solid #666;
  transform: rotate(45deg);
  transition: transform 0.3s ease;
}

.arrow.expanded {
  transform: rotate(-135deg);
}

.details-content {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease;
}

.details-container.expanded .details-content {
  max-height: 800rpx;
}

.detail-item {
  padding: 20rpx 24rpx;
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  border-bottom: 1rpx solid #f0f0f0;
}

.detail-item:last-child {
  border-bottom: none;
}

.image-loading {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.custom-loading-color {
  color: rgb(176, 199, 149) !important;
}
