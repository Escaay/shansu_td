.home-container {
  width: 100%;
  background: #ffffff;
  padding-bottom: calc(env(safe-area-inset-bottom) + 96rpx + 20rpx);
}

.poster-image {
  width: 100%;
  height: 900rpx;
  background-color: #f5f5f5;
  display: block;
  object-fit: cover;
}

.nutrition-entry {
  background-color: rgb(141, 167, 110);
  margin: 30rpx;
  padding: 30rpx 40rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 2rpx 10rpx rgba(104, 127, 75, 0.2);
  transition: all 0.3s ease;
}

.nutrition-entry text {
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 600;
}

.arrow {
  width: 16rpx;
  height: 16rpx;
  border-top: 3rpx solid #ffffff;
  border-right: 3rpx solid #ffffff;
  transform: rotate(45deg);
  margin-left: 20rpx;
}

/* 点击效果 */
.nutrition-entry:active {
  background-color: #5b7042;
  transform: scale(0.98);
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
}

.table-container {
  padding: 32rpx;
  overflow-x: auto;
}

.table {
  width: 100%;
  border: 1rpx solid #eee;
  border-right: 0;
  border-bottom: 0;
  font-size: 24rpx;
}

.tr {
  display: flex;
  width: 100%;
  justify-content: space-between;
  border-bottom: 1rpx solid #eee;
}

.th,
.td {
  padding: 20rpx 10rpx;
  border-right: 1rpx solid #eee;
  flex: 1;
  text-align: center;
  word-break: break-all;
}

.header {
  background: #f5f5f5;
  font-weight: bold;
}

.th {
  color: #333;
}

.td {
  color: #666;
}

.files-section {
  margin: 30rpx;
  padding: 30rpx;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
  padding: 0 10rpx;
  display: flex;
  align-items: center;
}

.section-title::before {
  content: '';
  width: 6rpx;
  height: 32rpx;
  background: rgb(141, 167, 110);
  margin-right: 16rpx;
  border-radius: 3rpx;
}

.file-list {
  background: #fff;
}

.file-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 20rpx;
  margin-bottom: 16rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.file-item:active {
  background: #f0f0f0;
  transform: scale(0.98);
}

.file-name {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  margin-right: 20rpx;
  line-height: 1.4;
}

.download-icon {
  width: 40rpx;
  height: 40rpx;
  flex-shrink: 0;
  opacity: 0.7;
  transition: all 0.3s ease;
}

.file-item:active .download-icon {
  opacity: 1;
  transform: scale(1.1);
}