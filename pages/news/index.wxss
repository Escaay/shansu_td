.news-container {
  padding: 24rpx;
  background: #f5f5f5;
  min-height: 100vh;
  padding-bottom: calc(env(safe-area-inset-bottom) + 96rpx);
}

.news-item {
  display: flex;
  padding: 32rpx;
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 32rpx;
}

.news-image {
  width: 40%;
  margin-right: 32rpx;
  aspect-ratio: 4/3;
  overflow: hidden;
}

.news-img {
  width: 100% !important;
  height: 100% !important;
  object-fit: contain !important;
  background-color: #f5f5f5;
}

.news-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-width: 0;
}

.news-title {
  font-size: 32rpx;
  color: #333;
  line-height: 44rpx;
  font-weight: bold;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.news-info {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #999;
  margin-top: 16rpx;
}

.news-date,
.news-views {
  display: flex;
  align-items: center;
}

.news-date {
  margin-right: 32rpx;
}

.news-date text,
.news-views text {
  margin-left: 8rpx;
}
